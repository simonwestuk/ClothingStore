@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Product Manager";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-md-6 text-right">
            <a class="btn btn-primary" asp-action="Upsert">Create New Product</a>
        </div>
    </div>

    <div class="p-4 rounded">
        <table id="prod-data" class="table table-striped table-bordered w-100">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>Description</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Edit</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}
