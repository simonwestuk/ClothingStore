@model ClothingStore.Models.ViewModels.ProductViewModel

@{


    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Product Manager";
}


<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row p-3 border">

        <input type="hidden" asp-for="Product.Id" value="@Model.Product.Id" />
        <div class="col-12 border-bottom">
            <h2 class="text-primary">Add/Edit Product</h2>
        </div>

        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.Description"></label>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
                <div class="col-8">
                    <input asp-for="Product.Description" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.Price"></label>
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="col-8">
                    <input asp-for="Product.Price" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    Category
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Product.CategoryId, Model.CategoryList, "Select Category", new { @class = "form-control" })
                </div>
            </div>
            @if (Model.Product.Id != 0)
            {
                <div class="row">
                    <div class="col">
                        <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Product.Id">Update</button>
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            }
        </div>
    </div>




</form>